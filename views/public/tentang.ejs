<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title %></title>

  <!-- Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <!-- Tailwind & AOS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css"/>
  <script defer src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

  <!-- Custom -->
  <link rel="stylesheet" href="/css/style.css" />

  <style>
    :root{
      --brand-1:#2563EB; --brand-2:#7C3AED; --brand-3:#DB2777;
      --ink:#0f172a; --muted:#475569; --line:#e5e7eb; --card:#ffffff;
    }
    html,body{scroll-behavior:smooth}
    body{ font-family: Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial; color:var(--ink); }

    /* Global helpers */
    .soft-card{background:var(--card);border-radius:1.1rem;box-shadow:0 14px 44px rgba(2,6,23,.08);border:1px solid var(--line);transition:transform .25s ease, box-shadow .25s ease}
    .soft-card:hover{transform:translateY(-2px);box-shadow:0 18px 56px rgba(2,6,23,.12)}
    .glass{background:rgba(255,255,255,.75);backdrop-filter:blur(8px)}
    .blob{position:absolute;border-radius:9999px;filter:blur(32px);opacity:.35;z-index:-1}
    .img-cover{width:100%;height:100%;object-fit:cover;display:block}
    .img-contain{width:100%;height:100%;object-fit:contain;display:block;background:#fff}
    .brand-gradient{background:linear-gradient(135deg,var(--brand-1) 0%,var(--brand-2) 55%,var(--brand-3) 100%)}

    /* Nav */
    .nav-link{position:relative;display:inline-flex;align-items:center;gap:.4rem;padding-bottom:6px;color:#334155;transition:color .25s ease}
    .nav-link:hover{color:var(--brand-1)}
    .nav-link::after{content:"";position:absolute;left:0;bottom:0;height:2px;width:0;background:var(--brand-1);transition:width .25s ease}
    .nav-link:hover::after,.nav-link.active::after{width:100%}
    .mobile-link{display:block;color:#334155;padding:.6rem .6rem;border-radius:.6rem;transition:.2s}
    .mobile-link:hover{color:var(--brand-1);background:#F3F4F6}

    /* Mobile slide menu */
    #mobile-menu{max-height:0;overflow:hidden;transition:max-height .35s ease}
    #mobile-menu.open{max-height:520px}

    /* Section divider */
    .section{position:relative}
    .section::before{content:"";position:absolute;left:0;right:0;top:-40px;height:1px;background:linear-gradient(90deg, transparent, #e5e7eb, transparent)}

    /* Motion reduce */
    @media (prefers-reduced-motion: reduce){
      .soft-card, .nav-link::after { transition:none }
      #mobile-menu{ transition:none }
    }
  </style>
</head>

<body class="bg-gradient-to-b from-white via-[#F7F9FF] to-[#FDF7FF] antialiased">
<script>
  window.addEventListener('DOMContentLoaded',()=>{
    if(window.AOS){ AOS.init({ once:true, duration:620, easing:'cubic-bezier(.2,.7,.25,1)' }); }
  });
</script>

<!-- ============== HEADER ============== -->
<header class="sticky top-0 z-50" data-aos="fade-down">
  <div class="h-1 bg-gradient-to-r from-blue-600 via-fuchsia-500 to-purple-600"></div>

  <div id="topbar" class="backdrop-blur bg-white/85 border-b border-gray-100">
    <div class="container mx-auto max-w-7xl px-4 py-4 flex items-center justify-between">
      <a href="/" class="flex items-center gap-2 group" aria-label="DigitalConvert - Beranda">
        <img src="/images/logo.svg" alt="" class="w-8 h-8 hidden sm:block opacity-90 group-hover:opacity-100 transition">
        <span class="text-2xl font-extrabold tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-blue-700 via-indigo-700 to-fuchsia-700">
          DigitalConvert
        </span>
      </a>

      <% const cp = (typeof currentPath!=='undefined' && currentPath) || ''; %>
      <nav class="hidden md:flex items-center gap-6 text-sm font-medium">
        <a href="/" class="nav-link <%= cp==='/' ? 'active text-blue-700' : '' %>">Beranda</a>
        <a href="/simulasi-gestun" class="nav-link <%= cp.startsWith('/simulasi-gestun') ? 'active text-blue-700' : '' %>">Simulasi Gestun</a>
        <a href="/public/simulasi-convert" class="nav-link <%= cp.includes('/public/simulasi-convert') ? 'active text-blue-700' : '' %>">Simulasi Convert</a>
        <a href="/simulasi-voucher" class="nav-link <%= cp.startsWith('/simulasi-voucher') ? 'active text-blue-700' : '' %>">Simulasi Voucher F&amp;B</a>
        <a href="/tentang" class="nav-link <%= cp.startsWith('/tentang') ? 'active text-blue-700' : '' %>">Tentang Kami</a>

        <% if (typeof categories !== 'undefined' && categories.length) { %>
          <% categories.forEach(cat => { %>
            <a href="/kategori/<%= cat.slug %>" class="nav-link <%= cp.includes('/kategori/'+cat.slug) ? 'active text-blue-700' : '' %>"><%= cat.name %></a>
          <% }) %>
        <% } %>

        <a href="/admin/login" class="nav-link" aria-label="Login Admin">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12H3m6-6l-6 6 6 6m9-6a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Login
        </a>
      </nav>

      <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg hover:bg-gray-50 text-gray-700"
              aria-expanded="false" aria-controls="mobile-menu" aria-label="Buka menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/></svg>
      </button>
    </div>

    <div id="mobile-menu" class="md:hidden bg-white/95 border-t border-gray-100 px-4 pb-4 space-y-2">
      <a class="mobile-link" href="/">Beranda</a>
      <a class="mobile-link" href="/simulasi-gestun">Simulasi Gestun</a>
      <a class="mobile-link" href="/public/simulasi-convert">Simulasi Convert</a>
      <a class="mobile-link" href="/simulasi-voucher">Simulasi Voucher F&amp;B</a>
      <a class="mobile-link" href="/tentang">Tentang Kami</a>
      <% if (typeof categories !== 'undefined' && categories.length) { %>
        <% categories.forEach(cat => { %>
          <a class="mobile-link" href="/kategori/<%= cat.slug %>"><%= cat.name %></a>
        <% }) %>
      <% } %>
      <a class="mobile-link" href="/admin/login">Login</a>
    </div>
  </div>
</header>

<script>
  // Mobile slide
  const menuBtn = document.getElementById('mobile-menu-btn');
  const menu    = document.getElementById('mobile-menu');
  menuBtn?.addEventListener('click', ()=>{
    const ex = menuBtn.getAttribute('aria-expanded') === 'true';
    menuBtn.setAttribute('aria-expanded', String(!ex));
    menu.classList.toggle('open');
  });

  // Header shadow on scroll
  const topbar = document.getElementById('topbar');
  let lastY = 0;
  window.addEventListener('scroll', () => {
    const y = window.scrollY || 0;
    if (y > 6 && lastY <= 6) topbar.classList.add('shadow-md');
    if (y <= 6 && lastY > 6) topbar.classList.remove('shadow-md');
    lastY = y;
  });
</script>

