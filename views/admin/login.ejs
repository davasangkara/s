<%- include('../partials/header') %>

<div class="max-w-md mx-auto mt-20 p-6 bg-white rounded shadow-md">
  <h2 class="text-2xl font-bold mb-4 text-center text-blue-600">Login Admin</h2>

  <% if (error) { %>
    <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4 text-sm">
      <%= error %>
    </div>
  <% } %>

  <form method="POST" action="/admin/login" class="space-y-4">
    <div>
      <label class="block text-sm mb-1">Username</label>
      <input type="text" name="username" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-400" />
    </div>

    <div>
      <label class="block text-sm mb-1">Password</label>
      <input type="password" name="password" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-400" />
    </div>

    <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition">
      Login
    </button>
  </form>
</div>

<%- include('../partials/footer') %>
